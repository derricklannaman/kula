%nav.st-menu.nav-reveal
  %ul
    - if controller_name == 'destinations'
      - @dinners.each do |dinner|
        %li.meal-link
          = link_to dinner_path(dinner.id) do
            = image_tag attachment_url(dinner, :dinner_image, :fill, 150, 150, format: "jpg"), class: 'icon-location'
            %span.title-up.pull-right
              = dinner.name.titleize
    - else
      %li
        %a.icon.icon-destinations{:href => "#"} Destinations
      %ul.location-list
        %li.location-list-item
          = link_to "discover Jamaica".titleize, discover_jamaica_path, class: "icon icon-location jamaica"
        %li
          = link_to "discover Cuba".titleize, discover_cuba_path, class: "icon icon-location cuba"
        %li
          = link_to "discover Brazil".titleize, discover_brazil_path, class: "icon icon-location brazil"
      %li
        = link_to "about".titleize, root_path, class: "icon"
      %li
        = link_to "account".titleize, root_path, class: "icon"
    .menu-endcap